<div class="row mll_item item">
  <%= fields_for "resume[worklists_attributes][#{list.id}][worklist_items_attributes][#{item.id}]", item do |itemf| %>
  <%= itemf.hidden_field :id %>
  <%= itemf.hidden_field :order, class: 'item_order' %></span>

    <div class="row" style="position: relative">
      <div class="col-xs-5">
        <div class="line">
          <%= itemf.label :line1, 'Line 1' %>
          <%= itemf.text_field :line1, class: 'form-control' %>
        </div>
        <div class="line">
          <%= itemf.label :line2, 'Line 2' %>
          <%= itemf.text_field :line2, class: 'form-control' %>
        </div>
      </div>

      <div class="controls">
        <span class="space"></span>
        <%= link_to '', resume_worklist_worklist_item_path(@resume.id, list.id, item.id),
          class: 'glyphicon glyphicon-trash clickable item_delete'%>
      </div>
      <div class="dates">
        <% start_year = Date.today.year - 70%>
        <% end_year   = Date.today.year + 10 %>
        <%= itemf.label :start, 'Start: ' %>
        <%= itemf.date_select :start, discard_day: true, order: [:month, :year], start_year: start_year, end_year: end_year %>
        <%= itemf.label :end, 'End: ' %>
        <%= itemf.date_select :end, discard_day: true, order: [:month, :year], start_year: start_year, end_year: end_year %>
      </div>
    </div>


    <div class="row">
      <div class="col-xs-12">
        <%= itemf.label :desc, 'Description' %>
        <%= itemf.text_area :desc, size: '30x3', class: 'form-control' %>
      </div>
    </div>

    <div class="clear"></div>
  <% end %>
</div>
