<div id="UserForm">
  
  <%= form_for @user, url: { action: "create" } do |uf| %>
    <%= uf.label :email, 'Email' %>
    <%= uf.text_field :email, class: "form-control" %>
    <br />
    <%= uf.label :password, 'Password' %>
    <%= uf.password_field :password, class: "form-control" %>
    <br />
    <%= uf.submit "Register", class: "btn btn-primary" %>
  <% end %>

</div>
